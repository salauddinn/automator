<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grunge"
    android:columnCount="12" >

    <Button
        android:id="@+id/keyboard"
        android:layout_width="76dp"
        android:layout_height="67dp"
        android:layout_column="2"
        android:layout_row="1"
        android:background="@drawable/keyboard"
        android:onClick="onKeyBoard" />

    <Button
        android:id="@+id/file_sharing"
        android:layout_column="6"
        android:layout_gravity="right"
        android:layout_row="2"
        android:background="@drawable/share"
        android:onClick="onShare" />

    <Space
        android:layout_width="103dp"
        android:layout_height="1dp"
        android:layout_column="0"
        android:layout_row="0" />

    <Space
        android:layout_width="16dp"
        android:layout_height="1dp"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="52dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0" />

    <Space
        android:layout_width="106dp"
        android:layout_height="1dp"
        android:layout_column="2"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="93dp"
        android:layout_column="0"
        android:layout_row="1" />

    <Space
        android:layout_width="1dp"
        android:layout_height="118dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        
         />

    <Button
        android:id="@+id/disconnect"
        android:layout_column="0"
        android:layout_columnSpan="11"
        android:layout_gravity="center_horizontal"
        android:layout_row="5"
        android:onClick="onDisconnect"
        android:text="Disconnect" />

    <Space
        android:layout_width="1dp"
        android:layout_height="96dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="5" />

    <Button
        android:id="@+id/media"
        android:layout_width="94dp"
        android:layout_height="80dp"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="3"
        android:background="@drawable/media"
        android:onClick="onMedia" />

    <Button
        android:id="@+id/joystick"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_column="6"
        android:layout_gravity="left|center_vertical"
        android:layout_row="3"
        android:background="@drawable/joystick"
        android:onClick="onJoystick" />

    <Button
        android:id="@+id/shell"
        android:layout_width="74dp"
        android:layout_height="63dp"
        android:layout_column="6"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="1"
        android:background="@drawable/shell"
        android:onClick="onShell" />

    <Button
        android:id="@+id/web_server"
        android:layout_width="70dp"
        android:layout_height="71dp"
        android:layout_column="2"
        android:layout_gravity="left|center_vertical"
        android:layout_row="3"
        android:background="@drawable/server"
        android:onClick="onServer" />

    <Button
        android:id="@+id/textpad"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="2"
        android:background="@drawable/alert"
        android:onClick="onTextpad" />

    <Button
        android:id="@+id/mouse"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:background="@drawable/mouse"
        android:onClick="onMouse" />

    <Button
        android:id="@+id/ppt"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_column="2"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:background="@drawable/ppt"
        android:onClick="onPresentation" />

</GridLayout>